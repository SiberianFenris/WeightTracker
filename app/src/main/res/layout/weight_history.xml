        app:layout_constraintTop_toBottomOf="@id/date3"
        app:layout_constraintLeft_toRightOf="@id/date2"
        app:layout_constraintRight_toLeftOf="@id/box2"
        android:paddingRight="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box4"
        android:layout_marginLeft="150dp"
        app:layout_constraintTop_toBottomOf="@id/date3"
        app:layout_constraintLeft_toRightOf="@id/weight2"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date5"
        app:layout_constraintTop_toBottomOf="@id/date4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/weight2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight5"
        app:layout_constraintTop_toBottomOf="@id/date4"
        app:layout_constraintLeft_toRightOf="@id/date2"
        app:layout_constraintRight_toLeftOf="@id/box2"
        android:paddingRight="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box5"
        android:layout_marginLeft="150dp"
        app:layout_constraintTop_toBottomOf="@id/date4"
        app:layout_constraintLeft_toRightOf="@id/weight2"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date6"
        app:layout_constraintTop_toBottomOf="@id/date5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/weight2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight6"
        app:layout_constraintTop_toBottomOf="@id/date5"
        app:layout_constraintLeft_toRightOf="@id/date2"
        app:layout_constraintRight_toLeftOf="@id/box2"
        android:paddingRight="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box6"
        android:layout_marginLeft="150dp"
        app:layout_constraintTop_toBottomOf="@id/date5"
        app:layout_constraintLeft_toRightOf="@id/weight2"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date7"
        app:layout_constraintTop_toBottomOf="@id/date6"
        app:layout_constraintLeft_toLeftOf="parent"
