<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightHistory"
    android:background="@drawable/gradient_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/title_bar"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_header"
        android:id="@+id/date_header"
        android:textSize="30sp"
        android:textColor="@color/black"
        style="@style/listItemDescription"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_header"
        android:textSize="30sp"
        android:id="@+id/weight_header"
        android:textAlignment="center"
        android:textColor="@color/black"
        style="@style/listItemDescription"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="175dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight1"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="175dp"
        android:paddingRight="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box1"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="175dp"
        app:layout_constraintTop_toBottomOf="@id/date_header"
        app:layout_constraintLeft_toRightOf="@id/weight1"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date2"
        app:layout_constraintTop_toBottomOf="@id/date1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/weight2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight2"
        app:layout_constraintTop_toBottomOf="@id/date1"
        app:layout_constraintLeft_toRightOf="@id/date2"
        app:layout_constraintRight_toLeftOf="@id/box2"
        android:paddingRight="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box2"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="215dp"
        android:enabled="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date3"
        app:layout_constraintTop_toBottomOf="@id/date2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/weight2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight3"
        app:layout_constraintTop_toBottomOf="@id/date2"
        app:layout_constraintLeft_toRightOf="@id/date2"
        app:layout_constraintRight_toLeftOf="@id/box3"
        android:paddingRight="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box3"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="255dp"
        android:enabled="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date4"
        app:layout_constraintTop_toBottomOf="@id/date3"
        app:layout_constraintLeft_toLeftOf="parent"
